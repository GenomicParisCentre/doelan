        </resource>
      </resources>
    </unitTest>
    <resources>
      <resource>
        <directory>src/main/conf</directory>
        <includes>
          <include>*.properties</include>
          <exclude>app.properties</exclude>
        </includes>
      </resource>
      <resource>
        <directory>src/main/java/files</directory>
        <targetPath>files</targetPath>
        <includes>
          <include>*</include>
        </includes>
      </resource>
    </resources>
  </build>
